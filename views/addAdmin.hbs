<div class="row auth">
    <div id="login" class="col s6 offset-s3">
        {{#if loginError}}
        <p class="alert">{{loginError}}</p>
        {{/if}}
        <h1>Добавить</h1>
        <form action="/admin/add" method="POST">
            <div class="input-field">
                <input id="login" name="login" type="text" class="validate" required>
                <label for="login">Логин</label>
                <span class="helper-text" data-error="Введите логин"></span>
            </div>

            <div class="input-field">
                <input id="password" name="password" type="password" class="validate" required>
                <label for="password">Пароль</label>
                <span class="helper-text" data-error="Введите пароль"></span>
            </div>

            <button type="submit" class="btn btn-primary">Добавить</button>
        </form>
    </div>